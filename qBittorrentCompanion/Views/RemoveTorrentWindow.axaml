<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="460" d:DesignHeight="140"
				Width="460" Height="140"				
        x:Class="qBittorrentCompanion.Views.RemoveTorrentWindow"
				WindowStartupLocation="CenterOwner"
        Title="Remove Torrents">
	<DockPanel Margin="10">
		<DockPanel DockPanel.Dock="Bottom" Margin="0 16 0 0">
			<CheckBox Grid.Column="0" Name="DeleteFilesCheckbox" x:Name="DeleteFilesCheckBox" FontStyle="Italic" Content="Permanently delete the files" />
			<StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
				<Button HorizontalContentAlignment="Center" Content="Cancel" Click="OnCancelClicked"/>
				<Button HorizontalContentAlignment="Center" Content="Remove" Classes="Delete" Click="OnRemoveClicked" />
			</StackPanel>
		</DockPanel>
		
		<TextBlock DockPanel.Dock="Top" Classes="Title" Text="Remove Torrents"/>		
		<TextBlock DockPanel.Dock="Top" TextWrapping="Wrap" Text="Are you sure you want to remove the selected torrents from the transfer list?"/>
	</DockPanel>
</Window>
