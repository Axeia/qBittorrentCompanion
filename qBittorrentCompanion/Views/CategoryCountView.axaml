<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="30"
             x:Class="qBittorrentCompanion.Views.CategoryCountView"
						 xmlns:vm="clr-namespace:qBittorrentCompanion.ViewModels"
						 x:DataType="vm:CategoryCountViewModel">

	<DockPanel LastChildFill="False">
		<PathIcon Data="{StaticResource tabs_regular}" />
		<TextBlock DockPanel.Dock="Left" Text="{Binding Name, StringFormat=' {0}'}"  />
		<TextBlock DockPanel.Dock="Right" Text="{Binding Count}" />
	</DockPanel>
</UserControl>
