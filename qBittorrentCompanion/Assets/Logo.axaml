<Canvas xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" d:DesignWidth="256" d:DesignHeight="256"
	Background="Transparent"
	Width="256" Height="256">
<Canvas.Resources>
	<RadialGradientBrush x:Key="GlobeBackground" Center="50%,50%">
		<GradientStop Offset="0.3" Color="#ffffe3" />
		<GradientStop Offset="0.9" Color="#fa8e58" />
		<GradientStop Offset="1" Color="#FDE753" />
	</RadialGradientBrush>
</Canvas.Resources>
		
	<Ellipse Width="217" Height="217" Fill="{StaticResource GlobeBackground}" Canvas.Left="18" Canvas.Top="20"/>
		
	<Path Data="M 128 10 A 118 118 0 1 0 246 128" Stroke="#20070a" StrokeThickness="20" RenderTransform="Rotate(15deg)" Canvas.Left="1" Canvas.Top="-1" />
		
	<Canvas RenderTransform="rotate(45deg)" RenderTransformOrigin="128, 128">
		<Path Data="
			M 111 82 
			V 300 
			M 111 110 
			a 30 40 0 1 0 0 40"
			Stroke="#20070a"
			StrokeThickness="17"/>
		<Path Data="
				M 111 82 
				V 300 
				M 111 110 
				a 30 40 0 1 0 0 40"
			Stroke="#20070a"
			StrokeThickness="17"
			RenderTransform="Scale(-1,-1)" RenderTransformOrigin="128, 128"/>
	</Canvas>
</Canvas>